@model src.Models.Operacion

<h2>Calculadora</h2>

<form asp-controller="Calculadora" asp-action="Calcular" method="post">
  <input type="number" name="Numero1" step="any" required />
  <select name="Operador">
    <option value="+">+</option>
    <option value="-">-</option>
    <option value="*">*</option>
    <option value="/">/</option>
  </select>
  <input type="number" name="Numero2" step="any" required />
  <button type="submit">Calcular</button>
</form>
